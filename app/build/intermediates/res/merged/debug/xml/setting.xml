<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
    android:title="编辑器">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="editor_dark_mode"
        android:title="夜间模式" >
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="editor_auto_save"
        android:title="自动保存">
    </CheckBoxPreference>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_symbol_view"
        android:summary="在输入法上显示符号输入栏，方便输入符号"
        android:title="显示符号栏">
    </CheckBoxPreference>
</PreferenceCategory>
</PreferenceScreen>